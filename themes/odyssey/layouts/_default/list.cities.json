{{ define "response" }}
{{- $cities := where .Data.Pages "Type" "cities" -}}
    {
        "group" : "{{.Type}}::{{ .Title }}",
        "count" : "{{ len $cities }}"
        ,"cities" : [
        {{ range $index, $e := $cities }}
            {{ if $index }}, {{ end }}{{ .Render "item" }}
        {{ end }}
        ]
    }
{{ end }}