{{- define "response" }}
{{- $id := cond (isset .Params "id") .Params.id .CurrentSection.Params.translationKey }}
{{- if eq $id "city"}}

    {
"title": 		"{{ .Title }}", 
{{- with .Params.subtitle }}
"subtitle": 	"{{ . }}", 
{{- end }} 
{{- with .Params.image }}
"image": 		"{{ . }}", 
{{- end }} 
"content": 		"{{ .Content | plainify }}",
"permalink": 	"{{ .Permalink }}"
 	}
 
 {{- else }}

{     
  "count" : "{{ len .Data.Pages }}"
  ,"items" : [
  {{ range $i, $e := .Data.Pages }}
      {{ if $i }}, {{ end }}{{ .Render "item" }}
  {{ end }}
  ]
}
{{- end }}
{{- end }}