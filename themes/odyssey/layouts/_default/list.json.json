{{ define "response" }}
{{- $id := cond (isset .Params "id") .Params.id .CurrentSection.Params.translationKey }}
{{- if eq $id "city"}}

    {
"title": "{{ .Title | jsonify }}", 
{{ with .Params.subtitle }}"subtitle": "{{ .Params.subtitle | jsonify }}", {{ end }} 
{{ with .Params.image }}"image": {{ .Params.image }}, {{ end }} 
"content": {{ .Content | jsonify }},
"permalink": "{{.Permalink }}"
 }
 
 {{- else }}

 {     
        "count" : "{{ len .Data.Pages }}"
        ,"items" : [
        {{ range $i, $e := .Data.Pages }}
            {{ if $i }}, {{ end }}{{ .Render "item" }}
        {{ end }}
        ]
    }
{{- end }}
{{ end }}