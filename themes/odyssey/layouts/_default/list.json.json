{{ define "response" }}
{{- $id := cond (isset .Params "id") .Params.id .CurrentSection.Params.translationKey }}
{{- if eq $id "city"}}

    {
"title": "{{ .Title }}", 
"subtitle": "{{ .Params.subtitle }}", 
"image": "{{ .Params.image }}", 
"content": "{{ .Content }}",
"permalink" : "{{.Permalink }}"
 }
 
 {{- else }}

 {     
        "count" : "{{ len .Data.Pages }}"
        ,"items" : [
        {{ range $i, $e := .Data.Pages }}
            {{ if $i }}, {{ end }}{{ .Render "item" }}
        {{ end }}
        ]
    }
{{- end }}
{{ end }}