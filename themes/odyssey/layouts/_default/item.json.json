
{
  "title": 			"{{ .Title }}",
  "date": 			"{{ .Date }}",
  "permalink": 		"{{ .RelPermalink }}",
  "content": 		"{{ replace (trim (.Content ) "\n") "\n" "linebreak" }}",
  "draft": 			"{{ .Params.draft }}",
  "id": 			"{{ .Params.id }}",
  "translationKey": "{{ .Params.translationKey }}"
  {{- range $i,$e := (.Resources.ByType "image") }} 
    {{- if eq $i 0 }}
  ,"image": 		"{{ . }}"
    {{- end }}
{{- end }} 
}