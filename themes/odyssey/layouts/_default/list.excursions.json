{{ define "response" }}
{{- $excursions := where .Data.Pages "Type" "excursions" -}}
{     
    "file" : "list.excursions.json",
    "count" : "{{ len $excursions }}",
    "excursions" : [
    {{ range $i, $e := $excursions }}
      {{ if $i }}, {{ end }}{{ .Render "item"}}
    {{ end }}
    ]
  }
{{ end }}