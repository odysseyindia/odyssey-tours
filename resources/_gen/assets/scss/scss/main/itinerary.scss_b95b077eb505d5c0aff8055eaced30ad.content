@import "https://fonts.googleapis.com/css?family=Arimo:400,700|Roboto+Slab:400,700";#itinerary{}#itinerary .hr-text{line-height:1em;position:relative;outline:0;border:0;color:#000;text-align:left;height:1.5em}#itinerary .hr-text:before{content:'';background:linear-gradient(to right,#000,#000,#000);position:absolute;left:0;top:50%;width:100%;height:2px}#itinerary .hr-text:after{content:attr(data-content);position:relative;display:inline-block;color:#000;padding:0 .5em;line-height:1.5em;color:#000;background-color:#90ee90}#itinerary .icon-bed{color:#000}#itinerary .add-task-container{display:-webkit-box;display:-ms-flexbox;display:flex;height:5.3rem;margin:auto;background:#a8a8a8;border:#000013 .2rem solid;border-radius:.2rem;padding:.4rem}#itinerary .main-container{display:-webkit-box;display:-ms-flexbox;display:flex}#itinerary .columns{display:-webkit-box;display:-ms-flexbox;display:flex;-webkit-box-align:start;-ms-flex-align:start;margin:1.6rem auto;width:100%;margin-top:0}#itinerary .column{width:33%;margin:0 .6rem;background:#a8a8a8;border:#000013 .2rem solid;border-radius:.2rem}#itinerary .column-header{padding:.1rem;border-bottom:#000013 .2rem solid}#itinerary .column-header h4{text-align:center}#itinerary .to-do-column .column-header{background:#ff872f}#itinerary .workspace-column .column-header{background:#13a4d9}#itinerary .itinerary-column .column-header{background:#15d072}#itinerary .new-task-column .column-header{background:#ffcb1e;border-top:#000013 .2rem solid}#itinerary .trash-column .column-header{background:#f44;border-top:#000013 .2rem solid}#itinerary .task-list{min-height:3rem}#itinerary .column-button{text-align:center;padding:.1rem}#itinerary .button{font-family:arimo,sans-serif;font-weight:700;border:#000013 .14rem solid;border-radius:.2rem;color:#000013;padding:.6rem 1rem;margin-bottom:.3rem;cursor:pointer}#itinerary .delete-button{background-color:#f44;margin:.1rem auto .6rem}#itinerary .delete-button:hover{background-color:#fa7070}#itinerary .add-button{background-color:#ffcb1e;padding:0 1rem;height:2.8rem;margin-top:.6rem}#itinerary .add-button:hover{background-color:#ffdd6e}#itinerary .search-button{background-color:#ff872f;padding:0 1rem;height:2.8rem;margin-top:.6rem}#itinerary .search-button:hover{background-color:#ff872f}#itinerary .draggable{display:flex;vertical-align:middle;list-style-type:none;background:#fff;transition:all .3s;margin:.4rem;height:4rem;border:#000013 .15rem solid;border-radius:.2rem;cursor:move;text-align:center;vertical-align:middle;font-family:roboto slab,serif}#itinerary .draggable.dragging{opacity:.8;background-color:#ff0;border:dashed 1px red}#itinerary input{width:100%;margin-right:0!important;background:#fff;border:#000013 .15rem solid;border-radius:.2rem;text-align:center;font-family:roboto slab,serif;height:4rem}